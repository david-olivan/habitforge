{
  "categories": [
    {
      "title": "## ğŸš€ Features",
      "labels": ["feature", "feat"]
    },
    {
      "title": "## ğŸ› Bug Fixes",
      "labels": ["fix", "bug"]
    },
    {
      "title": "## ğŸ“š Documentation",
      "labels": ["docs", "documentation"]
    },
    {
      "title": "## ğŸ¨ UI/UX Improvements",
      "labels": ["ui", "ux", "style"]
    },
    {
      "title": "## âš¡ Performance",
      "labels": ["perf", "performance"]
    },
    {
      "title": "## â™»ï¸ Code Refactoring",
      "labels": ["refactor", "refactoring"]
    },
    {
      "title": "## ğŸ§ª Tests",
      "labels": ["test", "tests"]
    },
    {
      "title": "## ğŸ”§ Maintenance",
      "labels": ["chore", "maintenance", "ci"]
    }
  ],
  "ignore_labels": [
    "wip",
    "skip-changelog",
    "ignore"
  ],
  "sort": "ASC",
  "template": "${{CHANGELOG}}",
  "pr_template": "- ${{TITLE}} (#${{NUMBER}})",
  "empty_template": "- No changes",
  "label_extractor": [
    {
      "pattern": "^(feat|fix|docs|style|refactor|perf|test|chore|ci)(\\(.*\\))?:",
      "target": "$1"
    }
  ],
  "transformers": [
    {
      "pattern": "^feat\\((.*)\\):\\s*(.*)$",
      "target": "**$1**: $2"
    },
    {
      "pattern": "^fix\\((.*)\\):\\s*(.*)$",
      "target": "**$1**: $2"
    }
  ],
  "max_tags_to_fetch": 200,
  "max_pull_requests": 200,
  "max_back_track_time_days": 365,
  "exclude_merge_branches": [],
  "tag_resolver": {
    "method": "semver"
  },
  "base_branches": [
    "main",
    "master"
  ]
}
